<%- include('../../includes/head.ejs') %>
    <link rel="stylesheet" href="/stylesheets/product.css">
    </head>

    <body>
        <%- include('../../includes/practice09/navigation.ejs') %>

            <main>
                <% if (prods.length > 0) { %>
                    <div class="grid">
                        <% for (let product of prods) { %>
                            <article class="card product-item">
                                <header class="card__header">
                                    <h1 class="product__title">
                                        <%= product.title %>
                                    </h1>
                                    <p class="product_author">by <%= product.author %></p>
                                </header>
                                <div class="card__image">
                                    <img src="/<%= product.imageUrl %>" alt="<%= product.title %>">
                                </div>
                                <div class="card__content">
                                    <h2 class="product__price">
                                        $<%= (product.price).toFixed(2) %>
                                    </h2>
                                    <!-- <p class="product__description">
                                        <%= product.description %>
                                    </p> -->
                                </div>
                                <div class="card__actions">
                                    <a href="../../../../proveAssignments/09/shop/products/<%= product._id %>" class="btn">Details</a>
                                    <% if (isAuthenticated) { %>
                                        <%- include('../../includes/practice09/add-to-cart.ejs', {product: product}) %>
                                    <% } %>
                                </div>
                            </article>
                            <% } %>
                    </div>
                    <div class="center_div">
                        <section class="pagination">
                            <!-- <a href ="/proveAssignments/09/shop/products/?page=1">1</a>
                            <a href ="/proveAssignments/09/shop/products/?page=2">2</a> -->
                            <% if(page != 1) { %>
                                <a href="/proveAssignments/09/shop/products/?page=1">First</a>
                            <% } %>
                            <% if(page == 1) { %>
                                <a href="/proveAssignments/09/shop/products/?page=1">1</a>
                            <% } %>
                            <% if (hasPreviousPage && previousPage != 1 && page != maxPage && page != maxPage - 1) { %>
                                <a href="/proveAssignments/09/shop/products/?page=<%= previousPage %>"><%= previousPage %></a>
                                <a href="/proveAssignments/09/shop/products/?page=<%= page %>" class="active"><%= page %></a>
                            <% } else if (page == maxPage || page == maxPage - 1) { %>
                                <a href="/proveAssignments/09/shop/products/?page=<%= previousPage - 1 %>"><%= previousPage - 1 %></a>
                                <a href="/proveAssignments/09/shop/products/?page=<%= previousPage %>"><%= previousPage %></a>
                                <a href="/proveAssignments/09/shop/products/?page=<%= page %>" class="active"><%= page %></a>
                            <% } else if (page != 1) { %>
                                <a href="/proveAssignments/09/shop/products/?page=<%= page %>" class="active"><%= page %></a>
                            <% } %>
                            <% if (hasNextPage && nextPage != maxPage) { %>
                                <a href="/proveAssignments/09/shop/products/?page=<%= nextPage %>"><%= nextPage %></a>
                                <% if (page == 1 && hasThirdPage) { %>
                                    <a href="/proveAssignments/09/shop/products/?page=3">3</a>
                                <% } %>
                                <% if ((page == 1 || page == 2) && hasFourthPage) { %>
                                    <a href="/proveAssignments/09/shop/products/?page=4">4</a>
                                <% } %>
                                <% if (nextPage + 1 == maxPage) { %>
                                    <a href="/proveAssignments/09/shop/products/?page=<%= maxPage %>"><%= maxPage %></a>
                                <% } else { %>
                                    <a href="/proveAssignments/09/shop/products/?page=<%= maxPage %>">Last</a>
                                <% } %>
                            <% } %>
                            <% if (nextPage == maxPage && nextPage + 1 != maxPage) { %>
                                <a href="/proveAssignments/09/shop/products/?page=<%= maxPage %>"><%= maxPage %></a>
                            <% } %>
                        </section>
                    </div>
                    
                    <% } else { %>
                        <h1>No Products Found!</h1>
                        <% } %>
            </main>
            <%- include('../../includes/end.ejs') %>