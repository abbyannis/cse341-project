<%- include('../../includes/head.ejs') %>
    <link rel="stylesheet" href="/stylesheets/forms.css">
    <link rel="stylesheet" href="/stylesheets/auth.css">
</head>

<body>
   <%- include('../../includes/practice09/navigation.ejs') %>

    <main>
        <% if (errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <% if (message) { %>
            <div class="user-message"><%= message %></div>
        <% } %>
        <form class="login-form" action="../../../../proveAssignments/09/auth/update-password" method="POST">
            <div class="form-control">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" value="<%= password %>">
            </div>
            <div class="form-control">
                <label for="confirmPassword">Confirm Password</label>
                <input type="password" name="confirmPassword" id="confirmPassword" value="<%= confirmPassword %>">
            </div>
            <input type="hidden" name="userId" value="<%= userId %>">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn btn_flex" type="submit">Update Password</button>
        </form>
    </main>
<%- include('../../includes/end.ejs') %>