<%- include('../../includes/head.ejs') %>
    <link rel="stylesheet" href="/stylesheets/forms.css">
    <link rel="stylesheet" href="/stylesheets/auth.css">
</head>

<body>
   <%- include('../../includes/prove06/navigation.ejs') %>

    <main>
        <% if (errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <% if (message) { %>
            <div class="user-message"><%= message %></div>
        <% } %>
        <form class="login-form" action="../../../../proveAssignments/06/auth/edit-profile" method="POST">
            <div class="form-control">
                <label for="first">First Name</label>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'first') ? 'invalid' : '' %>"
                    type="text" 
                    name="first" 
                    id="first" 
                    value="<%= currentUser.first %>"
                >
            </div>
            <div class="form-control">
                <label for="last">Last Name</label>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'last') ? 'invalid' : '' %>"    
                    type="text" 
                    name="last" 
                    id="last" 
                    value="<%= currentUser.last %>"
                >
            </div>
            <div class="form-control">
                <label for="email">Email Address</label>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>"
                    type="text" 
                    name="email" 
                    id="email" 
                    value="<%= currentUser.email %>"
                >
            </div>
            <!-- <div class="form-control">
                <label for="password">Password</label>
                <input
                    class="<%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>"
                    type="password" 
                    name="password" 
                    id="password" 
                    value="<%= oldInput.password %>"
                >
            </div>
            <div class="form-control">
                <label for="confirmPassword">Confirm Password</label>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'confirmPassword') ? 'invalid' : '' %>" 
                    type="password" 
                    name="confirmPassword" 
                    id="confirmPassword" 
                    value="<%= oldInput.confirmPassword %>"
                >
            </div> -->
            <input type="hidden" name="userId" value="<%= currentUser._id %>">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit">Update Profile</button>
            <div class="centered">
                <a href="/../../../../proveAssignments/06/auth/update-password">Update Password</a>
            </div>
        </form>
    </main>
<%- include('../../includes/end.ejs') %>