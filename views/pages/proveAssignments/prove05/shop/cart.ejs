<%- include('../../includes/head.ejs') %>
<link rel="stylesheet" href="/stylesheets/cart.css">
    </head>

    <body>
        <%- include('../../includes/prove05/navigation.ejs') %>
        <main>
            <% if (products.length > 0) { %>
                <ul class="cart__item-list">
                    <% products.forEach(p => { %>
                        <li class="cart__item">
                            <div class="thumb_box">
                                <img src="<%= p.productId.imageUrl %>" class="thumb" alt="<%= p.productId.title %>">
                            </div>
                            <div class="cart_title">
                                <h1><%= p.productId.title %><br><br><span class="normal">Product Total: $<%= (p.totalPrice).toFixed(2) %></span></h1>
                            </div>
                            <div class="cart_quantity">
                                <h2>Quantity: </h2>
                            </div>
                            <div class="quantity">
                                <form action="../../../../proveAssignments/05/shop/update-cart" method="POST">
                                <input type="number" name="quantity" id="quantity" step="0" value="<%= p.quantity %>"> 
                            </div>
                            <div class="buttons">
                                    <input type="hidden" value="<%= p.productId._id %>" name="productId">
                                    <button class="btn danger" type="submit">Update</button>
                                </form>
                                <form action="../../../../proveAssignments/05/shop/cart-delete-item" method="POST">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <input type="hidden" value="<%= p.productId._id %>" name="productId">
                                    <button class="btn danger" type="submit">Delete</button>
                                </form>
                            </div>
                        </li>
                    <% }) %>
                </ul>
                <div class="message">
                    <p><%= message %></p>
                </div>
                <div class="cart_total">
                    <h1>Cart Total: $<%= cartTotal.toFixed(2) %></h1>
                </div>
                <hr>
                <div class="centered">
                    <form action="../../../../proveAssignments/05/shop/create-order" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button type="submit" class="btn">Order Now!</button>
                    </form>
                </div>
            <% } else { %>
                <h1>No Products in Cart!</h1>
            <% } %>
        </main>
        <%- include('../../includes/end.ejs') %>