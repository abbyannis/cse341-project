    <body>
        <%- include('../../includes/prove08/navigation.ejs') %>
        <main class="centered details">
            <h1><%= product.title %></h1>
            <p style="text-align:center;">by <%= product.author %></p>

            <hr>
            <div class="image">
                <img src="/<%= product.imageUrl %>" alt="<%= product.title %>">
            </div>
            <h2>$<%= (product.price).toFixed(2) %></h2>
            <p><%= product.description %></p>
            <% if (isAuthenticated) { %>
                <%- include('../../includes/prove08/add-to-cart.ejs') %>
            <% } %>
        </main>
        <%- include('../../includes/end.ejs') %>