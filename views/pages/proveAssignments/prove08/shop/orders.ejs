    <body>
        <%- include('../../includes/prove08/navigation.ejs') %>
        <main>
            <div id="accordion" class="order-container">
                <% if (orders.length <= 0) { %>
                    <h1>No completed orders</h1>
                <% } else { count = 0; %>
                    <% orders.forEach(order => { %>
                        <% heading = "heading" + count %>
                        <% target = "#collapse" + count %>
                        <% text = "collapse" + count %>
                            <div class="card">
                                <div class="card-header" id="<%= heading %>">
                                    <h5 class="mb-0">
                                        <button class="btn btn-link collapsed orders" 
                                            data-toggle="collapse" 
                                            data-target="<%= target %>" 
                                            aria-expanded="false" 
                                            aria-controls="<%= text %>">
                                            <h5>Order - # <%= order._id %></h5>
                                        </button>
                                    </h5>
                                </div>
                                <div id="<%= text %>" class="collapse" aria-labelledby="<%= heading %>" data-parent="#accordion">
                                    <div class="card-body">
                                        <ul class="orders__products"></ul>
                                            <% order.products.forEach(p => { %>
                                                <li class="orders__products-item"><%= p.product.title %> by <%= p.product.author %> (<%= p.quantity %>)</li>
                                            <% }); %>
                                        </ul>
                                    </div>
                                </div>
                                <% count++; }); %>   
                            </div>
                    <% } %>
            </div>
